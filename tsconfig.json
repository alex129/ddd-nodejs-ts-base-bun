{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": false,
    "composite": false,
    "strict": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": "src",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@src/*": ["./*"],
      "@contollers/*": ["./infrastructure/controllers/*"],
      "@routes/*": ["./infrastructure/routes/*"],
      "@user/*": ["./domain/User/*"],
      "@application/*": ["./application/*"]
    }
  },
  "include": ["src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
    // "esm": true,
    // "compilerOptions": {
    //   "module": "esnext",
    //   "esModuleInterop": true
    // }
  }
}
